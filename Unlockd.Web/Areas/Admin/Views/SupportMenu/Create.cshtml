@model Unlockd.Web.Areas.Admin.Models.Services.SupportMenuViewModel
@{
    ViewData["Title"] = "Create";
}
@Html.AntiForgeryToken()

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Support Menu</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/SupportMenu/index">Support Menu</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Add new SupportMenu</strong>
                        </div>
                        <div class="card-body">
                            <form href="/Admin/SupportMenu/Create" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class=" form-control-label">Name</label>
                                    <input type="text" asp-for="Name" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Menu Icon</label>
                                    <input type="file" asp-for="MenuIconFile" class="form-control dropify" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <a href="/Admin/SupportMenu/index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
        });
    </script>
}