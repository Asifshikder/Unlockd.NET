@model BlogCategory

@{
    ViewData["Title"] = "Update";
}
@Html.AntiForgeryToken()

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Blog Category</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/BlogCategory/index">Blog Category</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Update Blog Category</strong>
                        </div>
                        <div class="card-body">
                            <form asp-area="Blog" asp-controller="BlogCategory" asp-action="Update" method="post">

                                <div class="form-group">
                                    <label class=" form-control-label">Name</label>
                                    <input type="text" asp-for="Name" class="form-control" required>
                                </div>
                                @Html.HiddenFor(model => model.Id)
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Update</button>
                                    <a href="/Blog/BlogCategory/Index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>