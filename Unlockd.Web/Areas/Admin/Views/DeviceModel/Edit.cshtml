@model DeviceModelViewModel

@{
    ViewData["Title"] = "Update";
}

@Html.AntiForgeryToken()
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Device Model</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/DeviceModel/index">Device Model</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Update Device Model</strong>
                        </div>
                        <div class="card-body">
                            <form asp-area="Admin" asp-controller="DeviceModel" asp-action="Update" method="post" enctype="multipart/form-data">
                                @Html.HiddenFor(s => s.Id)
                                <input type="hidden" asp-for="Image" />
                                <div class="form-group">
                                    <label class=" form-control-label">Name</label>
                                    <input type="text" asp-for="Name" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Name</label>
                                    <input type="text" asp-for="Charge" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Name</label>
                                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.brandList"></select>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">DeviceModel Logo</label>
                                    <input type="file" asp-for="ImageFile" class="form-control dropify" data-default-file="@Url.Content(Model.Image)">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Update</button>
                                    <a href="/Admin/DeviceModel/index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
        });
    </script>
}