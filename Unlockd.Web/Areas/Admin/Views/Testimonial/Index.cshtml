@model IEnumerable<Testimonial>

@{
    ViewData["Title"] = "Index";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Review</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/Testimonial/index">Review</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6"><div class="text-left"><strong class="card-title">Review</strong></div></div>
                                <div class="col-md-6"><div class="text-right"><a asp-controller="Testimonial" asp-action="Create" class="btn btn-outline-primary">Add New</a></div></div>
                            </div>

                            <div class="card-body">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th hidden>#</th>
                                            <th>Full Name</th>
                                            <th>Title</th>
                                            <th>Message</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td hidden>@item.Id</td>
                                                <td>@item.Name</td>
                                                <td>@item.Title</td>
                                                <td>@item.Message</td>
                                                <td>
                                                    <a href="/Admin/Testimonial/Edit?id=@item.Id" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                                                    <a href="/Admin/Testimonial/Details?id=@item.Id" class="btn btn-success btn-sm"><i class="fa fa-info"></i></a>
                                                    <a href="/Admin/Testimonial/Delete?id=@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
