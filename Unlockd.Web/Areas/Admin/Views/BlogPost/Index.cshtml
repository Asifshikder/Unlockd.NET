@model IEnumerable<BlogPost>

@{
    ViewData["Title"] = "Index";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Blog Post</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/BlogPost/index">Blog Post</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6"><div class="text-left"><strong class="card-title">Blog Post</strong></div></div>
                                <div class="col-md-6"><div class="text-right"><a asp-controller="BlogPost" asp-action="Create" class="btn btn-outline-primary">Add New</a></div></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th hidden>#</th>
                                        <th>Title</th>
                                        <th>Primary Image</th>
                                        <th>Short Desc.</th>
                                        <th>Featured Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td hidden>@item.Id</td>
                                            <td>@item.Title</td>
                                            <td><img src="@Url.Content(item.PrimaryImage)" height="40" /></td>
                                            <td>@item.ShortDesciption</td>
                                            <td>
                                                @if (item.IsFeatured)
                                                {
                                                    <a href="/Admin/BlogPost/ChangeFeaturedStatus?id=@item.Id" class="btn btn-success">Featured</a>
                                                }
                                                else
                                                {
                                                    <a href="/Admin/BlogPost/ChangeFeaturedStatus?id=@item.Id" class="btn btn-danger">Not Featured</a>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Admin/BlogPost/Edit?id=@item.Id" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                                                <a href="/Admin/BlogPost/Delete?id=@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>