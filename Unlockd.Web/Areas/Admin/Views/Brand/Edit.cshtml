@model BrandViewModel

@{
    ViewData["Title"] = "Update";
}
@Html.AntiForgeryToken()

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Brand</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/Brand/index">Brand</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Update Brand</strong>
                        </div>
                        <div class="card-body">
                            <form asp-area="Admin" asp-controller="Brand" asp-action="Update" method="post" enctype="multipart/form-data">
                                @Html.HiddenFor(s => s.Id)
                                <input type="hidden" asp-for="BrandLogo" />
                                <input type="hidden" asp-for="FeaturedImage" />
                                <div class="form-group">
                                    <label class=" form-control-label">Brand Name</label>
                                    <input type="text" asp-for="Name" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Unlocking Price (Average)</label>
                                    <input type="text" asp-for="AverageUnlockingPrice" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Brand Logo</label>
                                    <input type="file" asp-for="BrandLogofile" class="form-control dropify" data-default-file="@Url.Content(Model.BrandLogo)">
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Feature Image</label>
                                    <input type="file" asp-for="FeaturedImageFile" class="form-control dropify" data-default-file="@Url.Content(Model.FeaturedImage)">
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Short Description</label>
                                    <input type="text" asp-for="ShortDescription" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Update</button>
                                    <a href="/Admin/Brand/index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
        });
    </script>
}