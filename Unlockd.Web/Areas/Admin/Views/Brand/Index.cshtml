@model IEnumerable<Unlockd.Domain.Entities.Device.Brand>

@{
    ViewData["Title"] = "Index";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Brand</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/Brand/index">Brand</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- Main content -->
<!-- Main content -->
<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6"><div class="text-left"><strong class="card-title">Brand list</strong></div></div>
                                <div class="col-md-6"><div class="text-right"><a href="/Admin/Brand/create" class="btn btn-outline-primary">Add New</a></div></div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th hidden>#</th>
                                        <th>Name</th>
                                        <th>Brand Logo</th>
                                        <th>Featured Image</th>
                                        <th>Featured Status</th>
                                        <th>Models</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td hidden>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td><img src="@Url.Content(item.BrandLogo)" height="20" /></td>
                                            <td><img src="@Url.Content(item.FeaturedImage)" height="20" /></td>
                                            <td>
                                                @if (item.IsFeatured)
                                                {
                                                    <a href="/Admin/Brand/ChangeFeaturedStatus?id=@item.Id" class="btn btn-success">Featured</a>
                                                }
                                                else
                                                {
                                                    <a href="/Admin/Brand/ChangeFeaturedStatus?id=@item.Id" class="btn btn-danger">Not Featured</a>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Admin/DeviceModel/Index?id=@item.Id" class="btn btn-success btn-sm">View all</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/Brand/Edit?id=@item.Id" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                                                <a href="/Admin/Brand/Delete?id=@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </div>
</div>