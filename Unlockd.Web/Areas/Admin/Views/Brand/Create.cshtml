@model BrandViewModel
@{
    ViewData["Title"] = "Create";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Brand</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home /</a></li>
                    <li><a href="/Admin/Brand/index">Brand</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Add new Brand</strong>
                        </div>
                        <div class="card-body">
                            <form href="/Admin/Brand/Create" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class=" form-control-label">Brand Name</label>
                                    <input type="text" asp-for="Name" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Unlock price (Average)</label>
                                    <input type="text" asp-for="AverageUnlockingPrice" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Brand Logo</label>
                                    <input type="file" asp-for="BrandLogofile" class="form-control dropify" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Feature Image</label>
                                    <input type="file" asp-for="FeaturedImageFile" class="form-control dropify" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Covor photo</label>
                                    <input type="file" asp-for="CovorPhotoFile" class="form-control dropify" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Short Description</label>
                                    <input type="text" asp-for="ShortDescription" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Description</label>
                                    <textarea class="form-control dropify" asp-for="Description"></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <a href="/Admin/Brand/index" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
        });
    </script>
}