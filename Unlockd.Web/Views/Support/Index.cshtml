@model IEnumerable<SupportMenu>
@{
    ViewData["Title"] = "Index";
}
<style>
    
</style>
<hr class="offset-lg">
<hr class="offset-lg">
<div class="body-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <h1 class="">
                    <b>Support & Information</b>  <br /><small>VeeUnlock</small>
                </h1>
                <br />
                <br />
                <br />
            </div>
        </div>

        <div style=" width: 100%;">
            <div class="col-md-4 col-sm-6 col-xs-12 no-pad">
                <div style="padding: 50px 40px 60px;">
                    <h1 class="h3"><strong>We are here to help you.</strong></h1>
                    <div class="row">
                        <div class="col-md-3">
                            <hr />
                        </div>
                    </div>
                    <br />
                    <div class="">
                        <p>
                            Have you got a question about one of our services? At Mobile Unlocked we are here to help!

                            If you would like to find out more about phone unlocking or IMEI checks, don’t hesitate to get in touch with our team who will be happy to help. All you need to do is choose your preferred contact method below – and don’t forget to follow us on social media too!
                        </p>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-xs-6">
                            <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-lg btn-primary btn-square black">Contact us<i class="fa fa-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-sm-6 col-xs-12 no-pad">
                <div style="width: 100%;
                        height: 540px;
                        background-image: url(../images/contact.png);
                        background-size: cover;
                        background-position: center;">&nbsp;</div>
            </div>
        </div>

    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div style="min-height:154px;border :solid 2px;border-color:black; border-radius:5px;">
                    <div class="row" style="margin:10px">
                        <div class="col-sm-12 col-xs-12">
                            <div class="text-center">
                                <img src="~/images/FAQIcon.png" height="50" />
                                <br />
                            </div>
                        </div>
                        <div class="col-sm-12 col-xs-12">
                            <div class="text-center">
                                <hr />
                                 <a class="btn btn-block btn-primary btn-square btn-square black" asp-area="" asp-controller="Home" asp-action="FAQ">Frequently Asked Questions</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div style="min-height:110px;border :solid 2px;border-color:black; border-radius:5px;">
                        <div class="row" style="margin:10px">
                            <div class="col-sm-12 col-xs-12">
                                <div class="text-center">
                                    <img src="@Url.Content(item.MenuIcon)" height="50" />
                                    <br />
                                </div>
                            </div>
                            <div class="col-sm-12 col-xs-12">
                                <div class="text-center">
                                    <hr />
                                    <a class="btn btn-block btn-primary btn-square btn-square black" asp-area="" asp-controller="Support" asp-action="ByName" asp-route-id="@item.Id">@item.Name</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<br />